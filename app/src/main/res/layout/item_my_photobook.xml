<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/album_card_padding"
    android:paddingRight="5dp"
    android:paddingTop="@dimen/album_card_padding_top">


    <android.support.v7.widget.CardView
        android:id="@+id/img_photo_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="5dp">
        <ImageView
            android:id="@+id/img_photo"
            android:src="@drawable/pre_mar_1"
            android:layout_width="@dimen/album_image_dimen"
            android:layout_height="@dimen/album_image_dimen"
            android:scaleType="centerCrop"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linear_desc"
        android:layout_toLeftOf="@id/btn_share"
        android:layout_toRightOf="@+id/img_photo_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">


        <com.narmware.patima.support.customfonts.MyTextView
            android:id="@+id/txt_photo_name"
            android:text="Album title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/album_title"
            android:textColor="@color/grey_900"
            />

        <com.narmware.patima.support.customfonts.MyTextView
            android:id="@+id/txt_photo_desc"
            android:text="My album description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"/>

    </LinearLayout>


<ImageButton
    android:id="@+id/btn_share"
    android:padding="5dp"
    android:foreground="?attr/selectableItemBackground"
    android:background="@android:color/transparent"
    android:layout_alignParentRight="true"
    android:layout_alignParentBottom="true"
    app:srcCompat="@drawable/ic_menu_share"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />

</RelativeLayout>
