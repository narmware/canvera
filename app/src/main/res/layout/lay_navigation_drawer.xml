<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:id="@+id/nav_img"
    android:layout_width="match_parent"
    app:srcCompat="@drawable/photo"
    android:layout_height="200dp" />

    <ListView
        android:id="@+id/nav_list"
        android:layout_below="@id/nav_img"
        android:layout_above="@id/lin_enq"
        android:divider="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:visibility="invisible"
        android:id="@+id/lin_enq"
        android:layout_above="@id/footer"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.narmware.patima.support.customfonts.MyButton
            android:id="@+id/btn_enq"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="Enquiry"
            android:textAllCaps="false"
            android:minWidth="1dp"
            android:minHeight="1dp"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            android:drawablePadding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_height="match_parent"></LinearLayout>
        <com.narmware.patima.support.customfonts.MyButton
            android:id="@+id/btn_call"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:minWidth="1dp"
            android:minHeight="1dp"
            android:text="Call"
            android:padding="10dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            android:drawablePadding="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.narmware.patima.support.customfonts.MyTextView
            android:text="Product By"
            android:padding="2dp"
            style="@style/small_title_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"/>

        <com.narmware.patima.support.customfonts.MyTextView
            android:text="Narmware Software Solutions"
            style="@style/textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_500"/>
    </LinearLayout>
</RelativeLayout>