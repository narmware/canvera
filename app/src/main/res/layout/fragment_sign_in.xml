<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.narmware.patima.fragment.SignInFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg">

        <ImageView
            android:src="@drawable/rslogoj"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|right"
            android:layout_margin="@dimen/logo_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_weight="1">

            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/signin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_weight="1">


                <View
                    android:layout_centerVertical="true"
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:background="@android:color/white"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="110dp"
                    />


                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginBottom="40dp">

                    <com.narmware.patima.support.customfonts.MyEditText
                        android:id="@+id/edt_user"
                        android:layout_gravity="center"
                        android:hint="@string/user_name_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_person"
                        android:backgroundTint="@android:color/white"
                        style="@style/edit_text_login" />

                    <com.narmware.patima.support.customfonts.MyEditText
                        android:id="@+id/edt_pass"
                        android:layout_gravity="center"
                        android:hint="@string/password_hint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/white"
                        android:drawableLeft="@drawable/ic_lock"
                        android:inputType="textPassword"
                        style="@style/edit_text_login"/>
                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <com.narmware.patima.support.customfonts.MyTextView
        android:id="@+id/signin"
        android:layout_above="@id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect"
        android:text="Sign in"
        android:textSize="20dp"
        android:textColor="#3b4a45"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="13dp"
        />
    <com.narmware.patima.support.customfonts.MyTextView
        android:id="@+id/forget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forget Password ?"
        android:textSize="18dp"
        android:layout_marginBottom="3dp"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>
