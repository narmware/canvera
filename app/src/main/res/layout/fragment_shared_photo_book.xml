<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.narmware.canvera.fragment.MyPhotoBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Shared photobook fragment" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_fab"
        android:elevation="@dimen/shared_photo_fab_elevation"
        android:layout_width="@dimen/shared_photo_fab_width"
        android:layout_height="@dimen/shared_photo_fab_height"
        android:clickable="true"
        app:rippleColor="@color/grey_1000w"
        android:layout_gravity="bottom|right"
        app:srcCompat="@drawable/ic_add"
        android:layout_marginBottom="@dimen/shared_photo_fab_marginBottom"
        android:layout_marginRight="@dimen/shared_photo_fab_marginRight"
        app:backgroundTint="@color/colorPrimary" />

    <include layout="@layout/lay_bottom_sheet"></include>
</android.support.design.widget.CoordinatorLayout>
